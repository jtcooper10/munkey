{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "target": "ESNext",
        "composite": true,
        "sourceMap": true,
        "types": [
            "node"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
        "outDir": "bin"
    },
    "include": [
        "munkey.ts",
        "mkey-service.ts",
        "command.ts",
        "discovery.ts",
        "logging.ts",
        "configure.ts",
        "error.ts",
        "services/**/*.ts",
        "pouch/**/*.ts",
        "server/**/*.ts",
        "encryption/**/*.ts"
    ]
}
